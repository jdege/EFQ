@section css {
}

@section scripts {

    <script type="text/javascript">
    
        var fillSelect = function($select, result) {
            if (result.success) {
                $select.empty().append("<option value=''></option>");
                $.each(result.data, function(index, item) {
                    $select.append("<option value='" + item.value + "'>" + item.text + "</option>");
                });
            } else {
                alert(result.error);
            }
        };

        $(document).ready(function() {
            var $artistSelect = $("#ArtistId");
            var $customerSelect = $("#CustomerId");

            DropdownService.getArtists(function(result) {
                fillSelect($artistSelect, result);
            });

            DropdownService.getCustomers(function(result) {
                fillSelect($customerSelect, result);
            });
        });

    </script>
}
