@model JDege.EFQ.Web.Models.RunInvoiceQueryModel

@{
    ViewData["Title"] = "Index";
}

<h3>@Model.Title</h3>
<div>
    @Html.Raw(Model.Description)
</div>
<br />
<h3>The query we executed:</h3>
<div>
    @Model.Query
</div>
<br />

<h3>Results:</h3>
<a asp-controller=@Model.ReturnController asp-action="Index">Return to list</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceModels[0].InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceModels[0].BillingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceModels[0].BillingCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceModels[0].BillingState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceModels[0].BillingCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceModels[0].BillingPostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceModels[0].Total)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InvoiceModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingPostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
    </tbody>
</table>
